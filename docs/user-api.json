{
    "openapi": "3.0.0",
    "info": {
        "title": "API",
        "description": "API",
        "version": "1.0.0"
    },
    "servers": [
        {
            "url": "http://localhost:8000"
        }
    ],
    "paths": {
        "/api/v1/users": {
            "post": {
                "description": "Register a new user",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "examples": {
                                "BudiMan": {
                                    "description": "Register user Budi Man",
                                    "value": {
                                        "name": "Budi Man",
                                        "email": "budi.man@gmail.com",
                                        "password": "password",
                                        "password_confirmation": "password"
                                    }
                                }
                            },
                            "schema": {
                                "type": "object",
                                "required": [
                                    "name",
                                    "email",
                                    "password",
                                    "password_confirmation"
                                ],
                                "properties": {
                                    "name": {
                                        "type": "string"
                                    },
                                    "email": {
                                        "type": "string"
                                    },
                                    "password": {
                                        "type": "string"
                                    },
                                    "password_confirmation": {
                                        "type": "string"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "400": {
                        "description": "Validation error",
                        "content": {
                            "application/json": {
                                "examples": {
                                    "Validation error": {
                                        "description": "Validation error",
                                        "value": {
                                            "errors": {
                                                "name": "The email field is required.",
                                                "email": [
                                                    "The email field is required.",
                                                    "The email has already been taken."
                                                ],
                                                "password": [
                                                    "The password field is required.",
                                                    "Password must be at least 6 characters long"
                                                ]

                                            }
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "201": {
                        "description": "Successfully registered a new user",
                        "content": {
                            "application/json": {
                                "examples":{
                                    "Success":{
                                        "description": "Successfully registered a new user",
                                        "value": {
                                            "data": {
                                                "id": 1,
                                                "name": "Budi Man",
                                                "email": "budi.man@gmail.com"
                                            }
                                        }
                                    }

                                },
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "data": {
                                            "type": "object",
                                            "properties": {
                                                "id": {
                                                    "type": "integer"
                                                },
                                                "name": {
                                                    "type": "string"
                                                },
                                                "email": {
                                                    "type": "string"
                                                }
                                            }
                                        },
                                        "errors": {
                                            "type": "object"
                                        }

                                    }
                                }
                            }
                        }
                                        
                    }
                } 
            }
        },
        "/api/v1/users/login": {
            "post": {
                "description": "Login a user",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "examples": {
                                "BudiMan": {
                                    "description": "Login user Budi Man",
                                    "value": {
                                        "email": "budi.man@gmail.com",
                                        "password": "password"
                                    }
                                }
                            },
                            "schema": {
                                "type": "object",
                                "required": [
                                    "email",
                                    "password"
                                ],
                                "properties": {
                                    "email": {
                                        "type": "string"
                                    },
                                    "password": {
                                        "type": "string"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Successfully logged in",
                        "content": {
                            "application/json": {
                                "examples": {
                                    "Success": {
                                        "description": "Successfully logged in",
                                        "value": {
                                            "data": {
                                                "id": 1,
                                                "name": "Budi Man",
                                                "email": "budi.man@gmail.com",
                                                "token": "token"
                                            }
                                        }
                                    }
                                },
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "data": {
                                            "type": "object",
                                            "properties": {
                                                "id": {
                                                    "type": "integer"
                                                },
                                                "name": {
                                                    "type": "string"
                                                },
                                                "email": {
                                                    "type": "string"
                                                },
                                                "token": {
                                                    "type": "string"
                                                }
                                            }
                                        },
                                        "errors": {
                                            "type": "object"
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/v1/users/profile": {
            "get": {
                "description": "Get user profile",
                "parameters": [
                    {
                        "name": "Authorization",
                        "in": "header"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Successfully get user profile",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "data": {
                                            "type": "object",
                                            "properties": {
                                                "id": {
                                                    "type": "integer"
                                                },
                                                "name": {
                                                    "type": "string"
                                                },
                                                "email": {
                                                    "type": "string"
                                                }
                                            }
                                        },
                                        "errors": {
                                            "type": "object"
                                        }
                                    }
                                
                                }
                            }
                        }
                    }
                }

            },
            "patch": {
                "description": "Update user profile",
                "parameters": [
                    {
                        "name": "Authorization",
                        "in": "header"
                    }
                ],
                "requestBody":{
                    "description": "Update user profile",
                    "content": {
                        "application/json": {
                            "examples": {
                                "BudiMan": {
                                    "description": "Update user Budi Man",
                                    "value": {
                                        "name": "Budi Man",
                                        "password": "password"
                                    }
                                }
                            },
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "name": {
                                        "type": "string"
                                    },
                                    "password": {
                                        "type": "string"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Successfully updated user profile",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "data": {
                                            "type": "object",
                                            "properties": {
                                                "id": {
                                                    "type": "integer"
                                                },
                                                "name": {
                                                    "type": "string"
                                                },
                                                "email": {
                                                    "type": "string"
                                                }
                                            }
                                        },
                                        "errors": {
                                            "type": "object"
                                        }
                                    }
                                
                                }
                            }
                        }
                    }
                }

            }
        },
        "/api/v1/users/logout": {
            "delete": {
                "description": "Logout a user",
                "parameters": [
                    {
                        "name": "Authorization",
                        "in": "header"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Successfully logged out",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "data": {
                                            "type": "boolean"
                                        },
                                        "errors": {
                                            "type": "object"
                                        }
                                    }
                                
                                }
                            }
                        }
                    }
                }
            }
        }
    }
}